{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    /* Experimental Options */
    "experimentalDecorators": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/*.spec.ts",
    "@types/google.maps/**/*",
    "@types/hammer"
  ],
  "include": [
    "**/*.ts"
  ]
}
