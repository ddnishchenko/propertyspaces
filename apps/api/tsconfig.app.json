{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "@types/google.maps/**/*",
    "@types/hammer"
  ],
  "include": ["**/*.ts"]
}
